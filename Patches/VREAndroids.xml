              <partsToAffect>
               <li>Jaw</li>
              </partsToAffect>
             </li>
	   </hediffGivers>
	  </li>
	  <li>
	   <label>high on red-ice</label>
	   <minSeverity>0.45</minSeverity>
	   <painFactor>0.65</painFactor>
	   <statFactors>
	      <MeleeDamageFactor>1.25</MeleeDamageFactor>
	      <RestFallRateFactor>0.85</RestFallRateFactor>
	   </statFactors>
