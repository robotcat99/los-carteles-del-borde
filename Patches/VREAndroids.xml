	      <MaxNutrition>-0.33</MaxNutrition>
	      <MedicalTendQuality>-0.45</MedicalTendQuality>
	      <SurgerySuccessChanceFactor>-0.45</SurgerySuccessChanceFactor>
	      <MentalBreakThreshold>0.32</MentalBreakThreshold>
	   </statOffsets>
	   <capMods>
            <li>
              <capacity>Consciousness</capacity>
              <offset>-0.20</offset>
            </li>
            <li>
              <capacity>Moving</capacity>
              <postFactor>1.40</postFactor>
            </li>
	   </capMods>
	   <mentalStateGivers>
	    <li>
              <mentalState>TargetedInsultingSpree</mentalState>
              <mtbDays>2</mtbDays>
            </li>
	    <li>
              <mentalState>SocialFighting</mentalState>
              <mtbDays>5</mtbDays>
            </li>
	    <li>
              <mentalState>Berserk</mentalState>
              <mtbDays>8</mtbDays>
            </li>
	   </mentalStateGivers>
	   <hediffGivers>
             <li Class="HediffGiver_Random">
              <hediff>Asthma</hediff>
              <mtbDays>100</mtbDays>
              <partsToAffect>
               <li>Lung</li>
              </partsToAffect>
             </li>
             <li Class="HediffGiver_Random">
              <hediff>Frail</hediff>
              <mtbDays>130</mtbDays>
              <partsToAffect>
               <li>Torso</li>
              </partsToAffect>
             </li>
             <li Class="HediffGiver_Random">
              <hediff>ChemicalDamageModerate</hediff>
              <mtbDays>140</mtbDays>
              <partsToAffect>
                <li>Lung</li>
              </partsToAffect>
             </li>
             <li Class="HediffGiver_Random">
              <hediff>ChemicalDamageModerate</hediff>
              <mtbDays>260</mtbDays>
              <partsToAffect>
                <li>Brain</li>
              </partsToAffect>
             </li>
