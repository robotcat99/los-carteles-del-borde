<?xml version="1.0" encoding="utf-8" ?>

<Patch>

    <Operation Class="PatchOperationFindMod">
        <success>Always</success>
        <mods>
          <li>Anima Fruit</li>
        </mods>
        <match Class="PatchOperationSequence">			
            <operations>
                <li Class="PatchOperationAdd">					
		          <xpath>Defs</xpath>
		            <value>
			           <ThingDef ParentName="LCB_BulkCratesDrugsBase">
						<defName>LCB_Crate_AnimaFruit</defName>
						<label>crate of drugs</label>
						<description>A crate packed with drugs.</description>
						<graphicData>
							<texPath>Things/Item/Resource/LCB_Crate</texPath>
							<graphicClass>Graphic_Single</graphicClass>
							<drawSize>1.50</drawSize>
						</graphicData>
						<statBases>
							<MarketValue>3300</MarketValue>       <!-- 35 -->
							<Mass>2.27</Mass>	   
						</statBases>
						<costList>
							<LCB_Anima_Fruit>10</LCB_Anima_Fruit>
							<WoodLog>5</WoodLog>
						</costList>
						<killedLeavings>
							<LCB_Anima_Fruit>1</LCB_Anima_Fruit>
							<WoodLog>3</WoodLog>
						</killedLeavings>
					   </ThingDef>
		            </value>
				</li>
			</operations>
        </match>
	</Operation>
	
	
	
</Patch>